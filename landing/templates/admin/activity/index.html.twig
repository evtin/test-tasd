{% extends 'base.html.twig' %}

{% block title %}История активности{% endblock %}

{% block body %}
    <h1>История активности</h1>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">URL</th>
            <th scope="col">Количество визитов</th>
            <th scope="col">Последнее посещение</th>
        </tr>
        </thead>
        <tbody>
        {% for activiy in pagination %}
            <tr>
                <td>{{ activiy.url }}</td>
                <td>{{ activiy.count_visits }}</td>
                <td>{{ activiy.last_visit|date('H:i:s d.m.Y') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}